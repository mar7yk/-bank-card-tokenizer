<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.TextField?>
<GridPane alignment="CENTER" prefHeight="200.0" prefWidth="400" xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.bank_card_tokenizer_app.Controllers.AppController">
    <Label fx:id="lblCardNumber" text="Card number:">
        <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </GridPane.margin>
    </Label>
    <Label fx:id="lblToken" text="Token:" GridPane.rowIndex="1">
        <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </GridPane.margin>
    </Label>
    <TextField fx:id="txtCardNumber" GridPane.columnIndex="1" GridPane.columnSpan="4">
        <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </GridPane.margin>
    </TextField>
    <TextField fx:id="txtToken" GridPane.columnIndex="1" GridPane.columnSpan="4" GridPane.rowIndex="1">
        <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </GridPane.margin>
    </TextField>

    <Button fx:id="btnLogout" alignment="CENTER" mnemonicParsing="false" onAction="#btnLogout"
            prefWidth="150.0" text="Log out" GridPane.rowIndex="3" GridPane.columnIndex="0">
        <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </GridPane.margin>
    </Button>

    <Button fx:id="btnRegisterToken" alignment="CENTER" mnemonicParsing="false" onAction="#btnRegisterToken"
            prefWidth="150.0" text="Register token" GridPane.rowIndex="3" GridPane.columnIndex="1">
        <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </GridPane.margin>
    </Button>

    <Button fx:id="btnGetCardNumber" alignment="CENTER" mnemonicParsing="false" onAction="#btnGetCardNumber"
            prefWidth="150.0" text="Get card number" GridPane.rowIndex="3" GridPane.columnIndex="3">
        <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </GridPane.margin>
    </Button>
</GridPane>
